            android:textColor="@color/colorPrimaryDark"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_dhuhr_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
